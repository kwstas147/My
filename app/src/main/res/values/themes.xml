<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyErp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/background</item> <!-- Light mode background -->
        <item name="android:colorBackground">@color/background</item> <!-- Define colorBackground -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnBackground">@color/on_background</item> <!-- Text color for light background -->
        <!-- Error color. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item> <!-- Match status bar -->
        <item name="android:navigationBarColor">@color/background</item> <!-- Match navigation bar -->
    </style>

    <style name="Theme.MyErp" parent="Base.Theme.MyErp" />

    <style name="Theme.MyErp.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MyErp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyErp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/on_background</item> <!-- Ensure text is visible -->
        <item name="android:background">@color/background</item> <!-- Match background -->
    </style>

</resources>
